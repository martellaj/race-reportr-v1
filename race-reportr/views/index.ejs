  <div class="container">

    <div class="starter-template">
      <div class="row">
        <!-- Form side. 
          ==================================== -->
        <div class="col-sm-6">
          <form>
            <!-- General race information. 
              ==================================== -->
            <h2 class="lead"><em>Race information</em></h2>

            <div class="form-group">
              <label for="race-name">Race name</label>
              <input id="race-name" type="text">
            </div>
            <div class="form-group">
              <label for="race-distance">Race distance</label>
              <input id="race-distance" type="text">
            </div>
            <div class="form-group">
              <label for="race-date">Race date</label>
              <input id="race-date" type="text">
            </div>
            <div class="form-group">
              <label for="race-website">Race website</label>
              <input id="race-website" type="text">
            </div>

            <hr />

            <!-- Goal information. 
              ==================================== -->
            <h2 class="lead"><em>Goals</em></h2>

            <div class="form-group">
              <label for="goal-a">A goal</label>
              <input id="goal-a" type="text" style="display: inline">
              <input id="goal-a-completed" type="checkbox" style="display: inline">
            </div>
            <div class="form-group">
              <label for="goal-b">B goal</label>
              <input id="goal-b" type="text" style="display: inline">
              <input id="goal-b-completed" type="checkbox" style="display: inline">
            </div>
            <div class="form-group">
              <label for="goal-c">C goal</label>
              <input id="goal-c" type="text" style="display: inline">
              <input id="goal-c-completed" type="checkbox" style="display: inline">
            </div>

            <hr />

            <!-- Splits information. 
              ==================================== -->
            <h2 class="lead"><em>Splits</em></h2>

            <div class="form-group">
              <label for="distance-choice">Distance type</label>
              <div id="distance-type" class="radio">
                <label>
                  <input type="radio" name="split-distance" id="distance-choice-miles" value="miles" checked>Miles
                </label>
              </div>
              <div class="radio">
                <label>
                  <input type="radio" name="split-distance" id="distance-choice-kilometers" value="kilometers">Kilometers
                </label>
              </div>
            </div>

            <div class="splits">
              <div class="form-group split-div-1">
                <label for="split-1" style="display: inline">1 </label>
                <input id="split-1" type="text" style="display: inline">
                <input class="square-btn split-add-btn" type="button" value="+">
              </div>
            </div>

          </form>
        </div>

        <!-- Output side. 
          ==================================== -->
        <div class="col-sm-6">

        </div>
      </div>
    </div>

